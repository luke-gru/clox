class TimeoutError < Error { }
class Timeout {

  class timeout(secs, &blk) {
    if (!blk) {
      throw ArgumentError("needs a block");
    }
    var outerThread = Thread.current();
    var done = false;
    var newThread = newThread(fun() {
      sleep(secs);
      Thread.schedule();
      if (!done) {
        outerThread.throw(TimeoutError("timeout"));
      }
    });
    newThread.detach();
    blk.yield();
    done = true;
  }
}
